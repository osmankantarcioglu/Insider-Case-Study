# Simple debugging Dockerfile
FROM golang:1.20-alpine

WORKDIR /app

# Install basic utilities
RUN apk add --no-cache git curl

# Copy necessary files
COPY go.mod go.sum ./
COPY database ./database/
COPY cmd/debug_main.go cmd/debug_app.go ./cmd/

# Download dependencies
RUN go mod download

# Build the debug application
RUN go build -o debug_app ./cmd

# Expose port
EXPOSE 8080

# Run the app
CMD ["./debug_app"] 