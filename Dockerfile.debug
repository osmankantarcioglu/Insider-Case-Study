# Simplified debugging Dockerfile
FROM golang:1.20-alpine

WORKDIR /app

# Install basic utilities
RUN apk add --no-cache git curl

# Copy only what we need
COPY go.mod go.sum ./
COPY cmd/simple_debug.go ./cmd/
RUN go mod download

# Build the simplified debug app
RUN go build -o simple_debug ./cmd/simple_debug.go

# Expose port for healthcheck
EXPOSE 8080

# Run the app
CMD ["./simple_debug"] 